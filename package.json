{
  "version": "0.13.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsx scripts/build.ts",
    "build-all": "tsx scripts/build-all.ts",
    "release": "tsx scripts/release.ts",
    "contributors": "all-contributors generate & git add README.md",
    "lint-staged": "lint-staged",
